<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dividers">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/shopcar_title"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22666666"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:paddingBottom="3dp"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:paddingTop="2dp"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:textSize="12sp"
                                android:text="收货人:"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/order_username"
                                android:textSize="12sp"
                                android:background="@color/white"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/divideres"
                                android:text="张三"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:id="@+id/order_phone"
                                android:background="@color/white"
                                android:gravity="right|center_vertical"
                                android:textColor="@color/divideres"
                                android:text="158****5063"/>
                    </LinearLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:id="@+id/order_address"
                            android:layout_height="wrap_content"
                            android:textColor="@color/divideres"
                            android:textSize="12sp"
                            android:text="四川省成都市理想中心3栋"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/order_express_time"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:paddingBottom="2dp"
                            android:text="送货时间不限"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="商品信息"/>

                    <com.zangcun.store.widget.InnerListView
                            android:id="@+id/listView"
                            android:dividerHeight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:visibility="visible"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:background="#33666666"/>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/divideres"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:padding="5dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="商品总价"
                                android:id="@+id/order_pay_way"
                                android:textSize="16sp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:text="¥472.0"
                                android:id="@+id/order_pay_money"
                                android:textSize="13sp"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:padding="5dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="订单编号"
                                android:textSize="13sp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/order_number"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:text="20160323123456789"
                                android:textSize="13sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:padding="5dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="下单时间"
                                android:textSize="13sp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:id="@+id/order_time"
                                android:text="2016-03-18"
                                android:textSize="13sp"/>
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/divideres"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:padding="5dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="运费"
                                android:textSize="13sp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:id="@+id/order_money"
                                android:text="￥0.0"
                                android:textSize="13sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="3dp"
                            android:padding="5dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="商品总价"
                                android:textSize="13sp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:id="@+id/shooping_money"
                                android:text="￥472.0"
                                android:textSize="13sp"/>
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/divideres"/>
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:padding="5dp">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="官方客服QQ：123456"
                                  android:textSize="13sp"
                                  android:id="@+id/order_gf_qq"
                                  android:layout_marginLeft="5dp"
                        />
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="官方客服电话：1234567890"
                                  android:textSize="13sp"
                                  android:id="@+id/order_gf_phone"
                                  android:layout_marginLeft="5dp"
                                  android:layout_marginBottom="10dp"
                                  android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_above="@+id/dindan_bottom"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="订单总额："
                  android:textSize="18sp"
                  android:layout_toLeftOf="@+id/all_money"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="￥472.0"
                  android:textSize="18sp"
                  android:layout_marginRight="5dp"
                  android:textColor="@color/red"
                  android:layout_alignParentRight="true"
                  android:id="@+id/all_money"
        />
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey"
            android:gravity="center_vertical"
            android:id="@+id/dindan_bottom"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/order_delete"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消订单"
                android:background="@drawable/button_divider_selector"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        <TextView
                android:id="@+id/order_to_pay"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/button_selector"
                android:textColor="@color/white"
                android:text="立即支付"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>