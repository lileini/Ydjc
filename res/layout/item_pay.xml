<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:background="#ffffff"
              android:orientation="horizontal" >
    <ImageView android:layout_width="0dp"
               android:layout_weight="3"
               android:layout_marginLeft="7dp"
               android:id="@+id/item_gwc_img"
               android:src="@drawable/sp_icon_zw"
               android:layout_marginRight="7dp"
               android:layout_gravity="center_vertical"
               android:layout_height="65dp"/>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_marginRight="7dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="商品名称商品名称商品名称商品名称商品名称"
                  android:id="@+id/item_gwc_title"
                  android:singleLine="true"
                  android:layout_marginTop="3dp"
                  android:textSize="12sp"
                  android:textColor="@color/black"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="颜色：，尺寸"
                  android:id="@+id/item_gwc_desc"
                  android:singleLine="true"
                  android:textSize="10sp"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="1dp"
                  android:textColor="@color/divideres"/>
        <RelativeLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="x"
                      android:layout_marginLeft="1dp"
                      android:id="@+id/item_pay_chen"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="1"
                      android:layout_toRightOf="@+id/item_pay_chen"
                      android:layout_marginLeft="2dp"
                      android:layout_marginRight="1dp"
                      android:id="@+id/item_pay_count"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="￥400"
                      android:textColor="@color/loess"
                      android:layout_alignParentRight="true"
                      android:id="@+id/item_pay_money"
            />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
